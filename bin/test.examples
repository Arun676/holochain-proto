#!/usr/bin/env bash
# run the tests of example apps using hcdev

BRANCH=master
EXAMPLES=("HoloWorld" "fractal-wiki" "clutter" "cointoss") # "holodex" "dpki" "holochat"

for i in "$@"
do
    case $i in
        -b=*|--branch=*)
            BRANCH="${i#*=}"
            shfit #past argument=value
            ;;
        -e=*|--example=*)
            EXAMPLES=( ${i#*=} )
            shfit #past argument=value
            ;;
        *)
            # unknown option
            ;;
    esac
done

cd /tmp
testDir="holochain.test.examples"
mkdir $testDir
cd $testDir

declare -a RESULTS

i=0
for app in "${EXAMPLES[@]}"
do
    hcdev init -fromBranch=$BRANCH -cloneExample $app $app
    cd $app
    hcdev -no-nat-upnp -mdns=true test
    r=$?
    RESULTS[$i]="$r"
    i=$i+1
    printf "RESULT for $app: $r\n"
done

rm -rf /tmp/$testDir

RED='\033[0;31m'
GREEN='\033[0;32m'
NC='\033[0m' # No Color

exitValue=0
i=0
printf "\n\n===================================================\nTest results:\n"
for app in "${EXAMPLES[@]}"
do
    result=${RESULTS[$i]}
    i=$i+1
    if [ $result != 0 ]; then
        color="${RED}"
        exitValue=1
    else
        color="${GREEN}"
    fi
    printf "$app $color exit code: $result${NC}\n"

done

exit $exitValue
